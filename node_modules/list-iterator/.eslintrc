{
  "ecmaFeatures": {
    "modules"
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "rules": {
    "no-console": 1,
    "no-empty": 2,
    "no-unreachable": 2,
    "valid-typeof": 2,
    "curly": 1,
    "eqeqeq": 1,
    "no-alert": 1,
    "no-unused-expressions": 1,
    "no-undef": 2,
    "no-unused-vars": 1,
    "no-use-before-define": 2,
    "camelcase": 1,
    "comma-spacing": [1, {"before": false, "after": true}],
    "eol-last": 1,
    "indent": [1, 2],
    "no-trailing-spaces": 1,
    "quotes": [1, "single"],
    "space-after-keywords": 1
  }
}
